@model PagedList.IPagedList<Administrator.Data.Tbl_Users>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Areas/Super/Views/Shared/_Layout.cshtml";
}

<section class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">
    @{
        Html.RenderAction("SharedHeader", "Shared");
    }

    <main class="mdl-layout__content">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-4 border-bottom">
            <div class="col-md-6">
                <h3 class="h3">Usuarios</h3>
            </div>

            <div class="col-md-6">
                @using (Html.BeginForm("Index", "Users", FormMethod.Post, new { autocomplete = "off" }))
                {
                    <div class="input-group">
                        @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { maxlength = 80, @class = "form-control", placeholder = "Buscar el elemento" })
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="submit">Buscar</button>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header text-right">
                            @Html.ActionLink("Agregar nuevo usuario", "CreateUsers", "Users", new { @class = "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" })
                        </div>
                        <div class="table-responsive">
                            <table class="table mdl-data-table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th class="mdl-data-table__cell--non-numeric" scope="col">
                                            Tipo de usuario
                                        </th>
                                        <th scope="col">
                                            Foto
                                        </th>
                                        <th class="mdl-data-table__cell--non-numeric" scope="col">
                                            Correo
                                        </th>
                                        <th class="mdl-data-table__cell--non-numeric" scope="col">
                                            @Html.ActionLink("Nombre", "Index", new { sortorder = ViewBag.NameSort, currentFilter = ViewBag.CurrentFilter })
                                        </th>
                                        <th class="mdl-data-table__cell--non-numeric" scope="col">
                                            A. paterno
                                        </th>
                                        <th class="mdl-data-table__cell--non-numeric" scope="col">
                                            A. materno
                                        </th>
                                        <th scope="col">
                                            Estatus
                                        </th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="mdl-data-table__cell--non-numeric">
                                                @Html.DisplayFor(modelItem => item.Type_user)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Photo_user)
                                            </td>
                                            <td class="mdl-data-table__cell--non-numeric">
                                                @Html.DisplayFor(modelItem => item.Email_user)
                                            </td>
                                            <td class="mdl-data-table__cell--non-numeric">
                                                @Html.DisplayFor(modelItem => item.Name_user)
                                            </td>
                                            <td class="mdl-data-table__cell--non-numeric">
                                                @Html.DisplayFor(modelItem => item.LnameP_user)
                                            </td>
                                            <td class="mdl-data-table__cell--non-numeric">
                                                @Html.DisplayFor(modelItem => item.LnameM_user)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Active_user)
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-outline-success btn-sm">
                                                    ver más <i class="fas fa-eye"></i>
                                                </button>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("UpdateUsers","Users", new { Id = @Html.DisplayFor(modelItem => item.Id) })" type="button" class="btn btn-outline-warning btn-sm">
                                                    Editar <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("DeleteUsers","Users", new { Id = @Html.DisplayFor(modelItem => item.Id) })" type="button" class="btn btn-outline-danger btn-sm">
                                                    Eliminar <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="mdl-card__actions mdl-card--border text-right">
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</section>

